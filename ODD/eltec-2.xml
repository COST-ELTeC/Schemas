      <xi:include href="eltec-body.xml"/>     
     <back>  
      <div>      <head>Formal specifications</head>
            <p>The ELTeC encoding scheme defined by this document is a TEI-conformant customization,
               from which user documentation, and formal RELAXNG or DTD specifications are
               generated automatically. 
            </p>
     
    <schemaSpec ident="eltec-2" source="eltec-compiled.xml">
        <moduleRef key="tei"/>
        <moduleRef key="header"
            include="change encodingDesc extent fileDesc idno  keywords langUsage language  
            profileDesc publicationStmt revisionDesc sourceDesc taxonomy teiHeader  titleStmt"/>
        <elementRef key="TEI"/>
        <elementRef key="back"/>
        <elementRef key="body"/>
        <elementRef key="corr"/> <!--*-->
        <elementRef key="div"/>
        <elementRef key="emph"/> <!--*-->
        <elementRef key="foreign"/> <!--*-->
        <elementRef key="front"/>
        <elementRef key="gap"/> <!--*-->
        <elementRef key="head"/>
        <elementRef key="hi"/> <!--*--> 
        <elementRef key="l"/>
        <elementRef key="label"/> <!--*--> 
        <elementRef key="milestone"/> <!--*-->
       <classRef key="att.milestoneUnit"/>
        <elementRef key="note"/> <!--*-->
        <elementRef key="p"/>
        <elementRef key="pb"/>
        <elementRef key="quote"/> <!--*-->
       <elementRef key="rs"/>
       <elementRef key="s"/>
       <elementRef key="text"/>            
        <elementRef key="trailer"/>
        <elementRef key="w"/>
       <classRef key="att.linguistic"/>
       
       <!-- the following are needed in header-->
       <elementRef key="author"/>
       <elementRef key="bibl"/>
       <elementRef key="date"/>
       <elementRef key="idno"/>
       <elementRef key="measure"/>
       <elementRef key="name"/>
       <elementRef key="pubPlace"/>
       <elementRef key="publisher"/>
       <elementRef key="ref"/>
     <!--  <elementRef key="relatedItem"/>
     -->  <elementRef key="resp"/>
       <elementRef key="respStmt"/>
       <elementRef key="term"/>
       <elementRef key="title"/>
       <elementRef key="textDesc"/>
       <elementRef key="authorGender"/>
       <elementRef key="size"/>
       <elementRef key="canonicity"/>
       <elementRef key="timeSlot"/>
       <!-- change class memberships for title to suppress some attributes but allow it to appear outside the header -->
       
       <elementSpec ident="title" mode="change">
          <classes mode="replace">
             <memberOf key="att.global"/>
             <memberOf key="model.biblPart"/>
             <memberOf key="model.emphLike"/>
             <memberOf key="att.canonical"/>
          </classes>
       </elementSpec>
       
       
     </schemaSpec>
</div>
     </back>
      
     
   </text>
